@model Order

<div class="modal" tabindex="-1" role="dialog" id="exampleModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Pagamento</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form asp-action="" asp-controller="">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label class="col-form-label" asp-for="FirstName"></label>
                            <input class="form-control" asp-for="FirstName" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="col-form-label" asp-for="LastName"></label>
                            <input class="form-control" asp-for="LastName" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="col-form-label" asp-for="PostalCode"></label>
                            <input class="form-control" asp-for="PostalCode" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label class="col-form-label" asp-for="Adress"></label>
                            <input class="form-control" asp-for="Adress" placeholder="Avenida das Americas" />
                            <span asp-validation-for="Adress" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="col-form-label" asp-for="City"></label>
                            <input class="form-control" asp-for="City" placeholder="Ex: Curitiba/PR" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-md-2 mb-3">
                            <label class="col-form-label">N° Casa</label>
                            <input class="form-control" id="numCasa" placeholder="456" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label class="col-form-label" asp-for="Phone"></label>
                            <input class="form-control" asp-for="Phone" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success">Finalizar Compra</button>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}