@model Album
@{ 
    ViewData["Title"] = "Produto";
}
<div class="row">
    <div class="col-sm-5">
        <img class="img-fluid" alt="Imagem do album" src="@Model.AlbumArtUrl" />
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <h5>@Model.Title</h5>
            <small>Artist: @Model.Artist.Name</small>
        </div>
        <div class="form-group">
            <h6>R$ @Model.Price</h6>
            <button class="btn btn-warning">Buy</button>
        </div>
    </div>
</div>



